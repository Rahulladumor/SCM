@model CMSProject.Models.StudentTB

@{
    Layout = null;
}

@RenderPage("header.cshtml");
<!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">New Student Registration</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Student</a></li>
                <li class="breadcrumb-item active">New Student Registration</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            @using (Html.BeginForm("add_admin", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Surname :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(addstudent=>addstudent.Student_surname, new { @class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Name :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(addstudent => addstudent.Student_name, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Father Name :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(addstudent => addstudent.Student_fathername, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Birthdate :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Gender :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        <select name="gender" class="form-control">
                                            <option>Select</option>
                                            <option value="m">Male</option>
                                            <option value="f">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Course :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        <select name="course" class="form-control">
                                            <option>Select</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Class :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        <select name="class" class="form-control">
                                            <option>Select</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">Address :<span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextAreaFor(addstudent=>addstudent.Student_address, new { @class="form-control"})
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-phoneus">Mobile <span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(addstudent => addstudent.Student_mobile, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-email">Email : <span class="text-danger">*</span></label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(addstudent => addstudent.Student_email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
</div>
<!-- End Page wrapper  -->
    </div>
<!-- End Wrapper -->
@RenderPage("footer.cshtml");


