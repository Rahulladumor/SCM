@model CMSProject.Models.AdminTB

@{
    Layout = null;
}

@RenderPage("header.cshtml")
<!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Dashboard</h3>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-md-3">
                <div class="card bg-primary p-20">
                    <div class="media widget-ten">
                        <div class="media-body media-text-right">
                            <h2 class="color-white">@TempData["total_courses"]</h2>
                            <p class="m-b-0">Total Courses</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-pink p-20">
                    <div class="media widget-ten">
                        <div class="media-body media-text-right">
                            <h2 class="color-white">@TempData["total_students"]</h2>
                            <p class="m-b-0">Total Students</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success p-20">
                    <div class="media widget-ten">
                        <div class="media-body media-text-right">
                            <h2 class="color-white">@TempData["total_teachers"]</h2>
                            <p class="m-b-0">Total Teachers</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger p-20">
                    <div class="media widget-ten">
                        <div class="media-body media-text-right">
                            <h2 class="color-white">@TempData["total_classes"]</h2>
                            <p class="m-b-0">Total Classes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# row -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Today Notice</h4>
                    </div>
                    <div class="card-body">
                        <div class="current-progress">
                            <div class="progress-content">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="progress-text">Notice Title</div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div>Notice Description</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
</div>
<!-- End Page wrapper  -->
    </div>
<!-- End Wrapper -->
@RenderPage("footer.cshtml")




